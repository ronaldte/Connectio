@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 bg-no-repeat min-h-screen">
    <div class="shadow-md bg-white shadow-gray-200 sticky top-0">
        <div class="container px-14 mx-auto">
            <div class="py-2">
                <nav class="w-full flex justify-between">
                    <div class="flex">
                        <div class="my-auto mr-10 text-2xl font-bold text-orange-400">
                            <a asp-controller="Home" asp-action="Index">Connectio</a>
                        </div>
                    </div>
                    <div>
                        <partial name="_LoginPartial" />
                    </div>
                </nav>
            </div>
        </div>
    </div>
    
    <div class="container px-14 h-full mx-auto grid grid-cols-[275px_auto_350px]">
        @*Menu*@
        <div>
            <div class="fixed mt-5 pr-5 w-[275px]">
                <ul class="ml-3 font-semibold text-gray-500 text-lg">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="mb-5 @ActiveNavigationPage.HomeActivePage(ViewContext)"><a asp-controller="Home" asp-action="Index"  class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3"><i class="pr-5 bi bi-house"></i>Home</a></li>
                    }
                    
                    <li class="mb-5 @ActiveNavigationPage.ExploreActivePage(ViewContext)"><a asp-controller="Explore" asp-action="Index" class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3"><i class="pr-5 bi bi-hash"></i>Explore</a></li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="mb-5"><a class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3" href=""><i class="pr-5 bi bi-bell"></i>Notifications</a></li>
                        <li class="mb-5"><a class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3" href=""><i class="pr-5 bi bi-envelope"></i>Messages</a></li>
                        <li class="mb-5 @ActiveNavigationPage.BookmarksActivePage(ViewContext)"><a asp-controller="Reaction" asp-action="UserBookmarks" class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3"><i class="pr-5 bi bi-bookmark"></i>Bookmarks</a></li>
                        <li class="mb-5 @ActiveNavigationPage.ProfileActivePage(ViewContext)"><a asp-controller="User" asp-action="Index" asp-route-username="@UserManager.GetUserName(User)" class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3"><i class="pr-5 bi bi-person"></i>Profile</a></li>
                        <li class="mb-5 @ActiveNavigationPage.SettingsActivePage(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Index" class="hover:bg-orange-400 hover:text-white hover:rounded-full hover:p-3 hover:-m-3"><i class="pr-5 bi bi-gear"></i>Settings</a></li>    
                    }
                </ul>
                
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-controller="Post" asp-action="Create" class="block rounded-full bg-orange-400 p-3 w-full mt-5 font-semibold text-center text-white hover:bg-orange-500"><i class="bi bi-pen"></i> Compose</a>
                }
            </div>
        </div>

        @*Content*@
        <div class="w-full mt-5 px-5">
            <div>
                @RenderBody()
            </div>
        </div>

        <div></div>
    </div>

    @RenderSection("Scripts", required: false);

</body>
</html>
