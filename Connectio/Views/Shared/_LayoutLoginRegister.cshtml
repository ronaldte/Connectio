<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-100 bg-no-repeat min-h-screen">
    <div class="container w-[50%] h-screen mx-auto flex flex-col justify-between py-14">
        <div class="mx-auto text-4xl font-bold text-orange-400 pt-8">
            Connectio
        </div>

        <div class="w-[60%] mx-auto">
            <div class="w-full bg-white rounded-lg shadow dark:border">
                <div class="p-12">
                    @RenderBody()
                </div>
            </div>
        </div>

        <div>
            <footer class="flex justify-center">
                <ul class="flex justify-between text-orange-400">
                    <li class="pr-5 hover:underline"><a href="#">Terms of Service</a></li>
                    <li class="pr-5 hover:underline"><a href="#">Privacy Policy</a></li>
                    <li class="pr-5 hover:underline"><a href="#">GDPR</a></li>
                    <li class="pr-5 hover:underline"><a href="#">Open Source</a></li>
                </ul>
            </footer>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>