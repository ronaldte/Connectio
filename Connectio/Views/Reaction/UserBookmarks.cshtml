@model ReadAllBookmarksViewModel

@{
    ViewData["Title"] = "Bookmarks";
    ViewData["ActiveNavigationPage"] = ActiveNavigationPage.Bookmarks;
}

@if(Model.BookmarkedPosts.Count() == 0)
{
    <partial name="_Divider" model="@("You haven't bookmarked any posts")" />
}

@foreach (var bookmark in Model.BookmarkedPosts)
{
    <partial name="_PostCard" model="bookmark" />
}